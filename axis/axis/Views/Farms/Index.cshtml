        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberMws)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gearbox)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model)
{
    var ident = "Farm" + @item.FarmId;

    <tr id=@ident>

        <td>
            @Html.DisplayFor(modelItem => item.Client.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeFarm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FarmName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StreetAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZipCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manufacture)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Platform)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Convertor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberTowers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberMws)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gearbox)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.FarmId }, new { @class = "glyphicon glyphicon-pencil" }) |
            <a href="" onclick="confirmDelete(@item.FarmId); return false;" class="glyphicon glyphicon-remove"></a>
        </td>
    </tr>
}

</table>

@Html.AntiForgeryToken()
<p id="msg"></p>

@section scripts
{
    <script>
    function confirmDelete(id) {
        bootbox.confirm({
            message: "Are you sure you want to delete this?",
            buttons: {
                confirm: {
                    label: 'Yes',
                    className: 'btn-success'
                },
                cancel: {
                    label: 'No',
                    className: 'btn-danger'
                }
            },
            callback: function (result) {

               
                if (result) {

                    var url = "/farms/Delete/";
                    var FarmId = id
                    var anti = $('[name=__RequestVerificationToken]').val();

                    $.post(url, { id: FarmId, __RequestVerificationToken: anti }, function (data) {



                        $("#Farm" + FarmId).remove();
                        $("#msg").last().addClass("alert alert-success");
                        $("#msg").html(data);



                    });

                }
            }
        });


    }
    </script>


}