@model AXIS.Models.Tech

@{
    ViewBag.Title = "Edit Profile";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.TechId)

    <div class="container">
        <h1 class="well">Edit Technician Profile</h1>
        <div class="col-lg-12 well">
            <div class="row">
                <form>
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label>First Name</label>
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter First Name Here.." } })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6 form-group">
                                <label>Last Name</label>
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Last Name Here.." } })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            @Html.TextAreaFor(model => model.StreetAdderess, new { @class = "form-control", placeholder = "Enter Address Here..", @rows = "3" })
                            @Html.ValidationMessageFor(model => model.StreetAdderess, "", new { @class = "text-danger" })
                        </div>
                        <div class="row">
                            <div class="col-sm-4 form-group">
                                <label>City</label>
                                @Html.EditorFor(model => model.CityAdderess, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter City Name Here.." } })
                                @Html.ValidationMessageFor(model => model.CityAdderess, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-4 form-group">
                                <label>State</label>
                                @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter State Name Here.." } })
                                @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-4 form-group">
                                <label>Zip</label>
                                @Html.EditorFor(model => model.Zip, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Zip Code Here.." } })
                                @Html.ValidationMessageFor(model => model.Zip, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Country</label>
                            @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Country Name Here.." } })
                            @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                        </div>
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label>Language</label>
                                @Html.EditorFor(model => model.Language, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Language Here.." } })
                                @Html.ValidationMessageFor(model => model.Language, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6 form-group">
                                <label>Cell Phone</label>
                                @Html.EditorFor(model => model.Cell, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Cell number Here.." } })
                                @Html.ValidationMessageFor(model => model.Cell, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Local Airport</label>
                            @Html.EditorFor(model => model.LocalAirport, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Local Airport Here.." } })
                            @Html.ValidationMessageFor(model => model.LocalAirport, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Email Address</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Email Address Here.." } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>SSN</label>
                            @Html.EditorFor(model => model.SSN, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter SSN Here.." } })
                            @Html.ValidationMessageFor(model => model.SSN, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Driver Licence</label>
                            @Html.EditorFor(model => model.DriveLicence, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Drive Licence Here.." } })
                            @Html.ValidationMessageFor(model => model.DriveLicence, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>PayRate</label>
                            @Html.EditorFor(model => model.PayRate, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter PayRate Here.." } })
                            @Html.ValidationMessageFor(model => model.PayRate, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Type of PayRate</label>
                            @Html.EnumDropDownListFor(model => model.TypePayRate, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TypePayRate, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Medical</label>
                            @Html.EditorFor(model => model.Medical, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Pay Rate Here.." } })
                            @Html.ValidationMessageFor(model => model.Medical, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Passport #</label>
                            @Html.EditorFor(model => model.Passport, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Pay Rate Here.." } })
                            @Html.ValidationMessageFor(model => model.Passport, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Marital Status</label>
                            @Html.EditorFor(model => model.MaritalStatus, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Pay Rate Here.." } })
                            @Html.ValidationMessageFor(model => model.MaritalStatus, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Number of Children</label>
                            @Html.EditorFor(model => model.Children, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Pay Rate Here.." } })
                            @Html.ValidationMessageFor(model => model.Children, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Education</label>
                            @Html.EditorFor(model => model.Education, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Pay Rate Here.." } })
                            @Html.ValidationMessageFor(model => model.Education, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

}

<div>
    <a href=@Url.Action("Index", "Teches") class="btn btn-primary btn-xs">Back</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
