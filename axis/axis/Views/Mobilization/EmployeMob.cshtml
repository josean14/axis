@model AXIS.Models.Purchaseorder
@{
    ViewBag.Title = "Employee Mobilization";
}

<h2>MOBILIZATION &raquo; SETUP &raquo; EMPLOYEE MOBILIZATION</h2>

<p>
    <a href=@Url.Action("Index", "Mobilization") class="btn btn-primary btn-xs">BACK</a>

    <a href=@Url.Action("Index", "Mobilization") class="btn btn-primary btn-xs">TECHNICIANS</a>

    

    <a href="~/Reports/EmployeeMob.aspx" target="_blank">View Report</a>
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.PurchaseOrderId)
    @Html.HiddenFor(model => model.ContractId)
    @Html.HiddenFor(model => model.Commentary)

<div class="panelright">
    <div class="panel panel-axislg">
        <!-- Default panel contents -->
        <div class="panel-heading">Project Site Information</div>

        <table class="table table-bordered">
            <tr>
                <th align="center">
                    <p>Customer:</p>
                </th>
                <th align="center">
                    <p>@Html.DisplayFor(model => model.Contract.Rfq.Farm.FarmName)</p>
                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Axis Job #:</p>
                </th>
                <th align="center">
                    <p>@Html.DisplayFor(model => model.ContractId)</p>
                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Customer PO #:</p>
                </th>
                <th align="center">
                    @Html.DisplayFor(model => model.PO)
                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Technicians:</p>
                </th>
                <th align="center">

                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Project Site Name:</p>
                </th>
                <th align="center">
                    @Html.DisplayFor(model => model.Contract.Rfq.ProjectName)
                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Project Site address:</p>
                </th>
                <th align="center">
                    @Html.DisplayFor(model => model.Contract.Rfq.Farm.StreetAddress), @Html.DisplayFor(model => model.Contract.Rfq.Farm.City), @Html.DisplayFor(model => model.Contract.Rfq.Farm.State), @Html.DisplayFor(model => model.Contract.Rfq.Farm.ZipCode)
                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Site Manager:</p>
                </th>
                <th align="center">
                    @Html.DisplayFor(model => model.Contract.Rfq.Farm.Client.FullName)
                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Site Manager Contact:</p>
                </th>
                <th align="center">
                    @Html.DisplayFor(model => model.Contract.Rfq.Farm.Client.Street), @Html.DisplayFor(model => model.Contract.Rfq.Farm.Client.City), @Html.DisplayFor(model => model.Contract.Rfq.Farm.Client.State), @Html.DisplayFor(model => model.Contract.Rfq.Farm.Client.ZipCode)
                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Job Description:</p>
                </th>
                <th align="center">
                    @Html.DisplayFor(model => model.Contract.Rversion.ProjectDescription)
                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Project Start Date:</p>
                </th>
                <th align="center">
                    @Html.DisplayFor(model => model.Contract.StartDate)
                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Project Start Time:</p>
                </th>
                <th align="center">

                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Tooling:</p>
                </th>
                <th align="center">
                    @Html.EditorFor(model => model.Tooling, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Tooling, "", new { @class = "text-danger" })
                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Required PPE:</p>
                </th>
                <th align="center">

                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Specialty Item:</p>
                </th>
                <th align="center">
                    @Html.EditorFor(model => model.SpecialtyItems, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SpecialtyItems, "", new { @class = "text-danger" })
                </th>
            </tr>

        </table>

    </div>

    <div class="panel panel-axislg">
        <!-- Default panel contents -->
        <div class="panel-heading">Travel Information</div>

        <table class="table table-bordered">
            <tr>
                <th align="center">
                    <p>Airport Destination:</p>
                </th>
                <th align="center">
                    @Html.EditorFor(model => model.AirportDestination, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AirportDestination, "", new { @class = "text-danger" })
                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Departure Date:</p>
                </th>
                <th align="center">
                    @Html.EditorFor(model => model.DepartureDate, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DepartureDate, "", new { @class = "text-danger" })
                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Travel Plans:</p>
                </th>
                <th align="center">
                    @Html.TextAreaFor(model => model.TravelPlans, new { htmlAttributes = new { @class = "form-control" }, style = "margin: 0px; width: 303px; height: 130px;" })
                    @Html.ValidationMessageFor(model => model.TravelPlans, "", new { @class = "text-danger" })
                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Airport Cargo Address</p>
                </th>
                <th align="center">
                    @Html.EditorFor(model => model.AirportCargoAddress, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AirportCargoAddress, "", new { @class = "text-danger" })
                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Airport Cargo Contact:</p>
                </th>
                <th align="center">
                    @Html.EditorFor(model => model.AirportCargoContact, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AirportCargoContact, "", new { @class = "text-danger" })
                </th>
            </tr>
        </table>

    </div>

    <div class="panel panel-axislg">
        <!-- Default panel contents -->
        <div class="panel-heading">Lodging Information</div>

        <table class="table table-bordered">
            <tr>
                <th align="center">
                    <p>Lodging in Area:</p>
                </th>
                <th align="center">
                   @Html.EditorFor(model => model.LodgingInArea, new { htmlAttributes = new { @class = "form-control" } })
                   @Html.ValidationMessageFor(model => model.LodgingInArea, "", new { @class = "text-danger" })
                </th>
            </tr>
            <tr>
                <th align="center">
                    <p>Notes:</p>
                </th>
                <th align="center">
                    @Html.TextAreaFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" }, style = "margin: 0px; width: 303px; height: 130px;" })
                    @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                </th>
            </tr>
        </table>

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>


</div>

}