@{
    ViewBag.Title = "WAREHOUSE INVENTORY";
}

<h2>ASSETS &raquo; WAREHOUSE INVENTORY</h2>

<p>
    @Html.ActionLink("BACK", "Inventory", "Assets", new { @class = "btn btn-primary btn-xs" })
</p>

<h3>TO BE ASSIGNED TO:</h3>


<div class="row">
    <div class="col-md-4">
        <div class="btnaxis btnaxis-axis btnaxis-lg" id="Job">A JOB</div>
    </div>

    <div class="col-md-4">
        <div class="btnaxis btnaxis-axis btnaxis-lg" id="Truck">A TRUCK</div>
    </div>

    <div class="col-md-4">
        <div class="btnaxis btnaxis-axis btnaxis-lg" id="Tech">A TECH</div>
    </div>

</div>

<br />

<div id="Byjob" style="display: none">
    @Html.Action("PartialInvWarehousebyJob", "Assets")
</div>

<div id="Bytruck" style="display: none">
    @Html.Action("PartialInvWarehousebyTruck", "Assets")
</div>

<script src="/Scripts/jquery.min.js"></script>
@*<br />
    @Html.Action("PartialInvWarehousebyTruck", "Assets")
<br />*@

<script>
    $(document).ready(function () {
        $("#Job").click(function () {
            $("#Byjob").toggle("slow");
        });
    });

    $(document).ready(function () {
        $("#Truck").click(function () {
            $("#Bytruck").toggle("slow");
        });
    });

</script>