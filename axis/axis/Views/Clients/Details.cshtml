@model AXIS.Models.Client

@{
    ViewBag.Title = "CLIENT PROFILE";
}

<div class="container">
    <h1 class="well">PROFILE</h1>
    <div class="col-lg-12 well">
        <div class="row">
            <form>
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label>First Name</label>
                            <p></p>
                            <span class="labelaxis labelaxix-profile">@Html.DisplayFor(model => model.FirstName)</span>
                            
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>Last Name</label>
                            <p></p>
                            <span class="labelaxis labelaxix-profile">@Html.DisplayFor(model => model.LastName)</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <p></p>
                        <span class="labelaxis labelaxix-profile">@Html.DisplayFor(model => model.Street)</span>                       
                    </div>
                    <div class="row">
                        <div class="col-sm-4 form-group">
                            <label>City</label>
                            <p></p>
                            <span class="labelaxis labelaxix-profile">@Html.DisplayFor(model => model.City)</span>                              
                        </div>
                        <div class="col-sm-4 form-group">
                            <label>State</label>
                            <p></p>
                            <span class="labelaxis labelaxix-profile">@Html.DisplayFor(model => model.State)</span> 
                        </div>
                        <div class="col-sm-4 form-group">
                            <label>Zip</label>
                            <p></p>
                            <span class="labelaxis labelaxix-profile">@Html.DisplayFor(model => model.ZipCode)</span> 
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Country</label>
                        <p></p>
                        <span class="labelaxis labelaxix-profile">@Html.DisplayFor(model => model.Country)</span>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label>Title</label>
                            <p></p>
                            <span class="labelaxis labelaxix-profile">@Html.DisplayFor(model => model.Title)</span>
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>Department</label>
                            <p></p>
                            <span class="labelaxis labelaxix-profile">@Html.DisplayFor(model => model.Department)</span>
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>Company</label>
                            <p></p>
                            <span class="labelaxis labelaxix-profile">@Html.DisplayFor(model => model.Company)</span>
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>Region</label>
                            <p></p>
                            <span class="labelaxis labelaxix-profile">@Html.DisplayFor(model => model.Region)</span>
                        </div>

                    </div>
                    <div class="form-group">
                        <label>Work Phone Number</label>
                        <p></p>
                        <span class="labelaxis labelaxix-profile">@Html.DisplayFor(model => model.WorkPhone)</span>
                    </div>
                    <div class="form-group">
                        <label>Email Address</label>
                        <p></p>
                        <span class="labelaxis labelaxix-profile">
                            <a href="mailto:@Html.DisplayFor(model => model.Email)">@Html.DisplayFor(model => model.Email)</a>
                        </span>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-0 col-md-5">
                            <input type="button" value="New Call Log" class="btn btn-lg btn-info" id="PartialCreate" />
                        </div>
                    </div>
                
                
                </div>
            </form>
        </div>
    </div>
</div>

@Html.HiddenFor(model => model.ClientId)

<p>
    <a href=@Url.Action("Index", "Clients") class="btn btn-primary btn-xs">Back</a>
    <a href=@Url.Action("Edit", "Clients", new { id = Model.ClientId }) class="btn btn-primary btn-xs"> Edit </a>
</p>

<div id="PartialCreateView"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $('#PartialCreate').click(function () {


                var ClientId = $('#ClientId').val();

                var url = "/Ccalls/PartialCreate/" + ClientId;

                $('#PartialCreateView').load(url);
            });
        });

        function CallSave() {
            var url = "/Ccalls/PartialCreate/";
            var clientid = $('#ClientId').val();
            var anti = $('[name=__RequestVerificationToken]').val();
            var title = $('#Title').val();
            var date = $('#Date').val();
            var note = $('#Note').val();
            var username = $('#UserName').val();
            var ccallid = 0

            $.post(url, { CcallId: ccallid, Title: title, Date: date, Note: note, UserName: username, ClientId: clientid, __RequestVerificationToken: anti }, function (data) {

                if (data = 1) {

                    $('#PartialCreateView').html('<p  class="alert alert-success">Save Sucess</p>');

                }
            });
        }

    </script>
}