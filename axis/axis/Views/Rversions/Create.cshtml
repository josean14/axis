@model AXIS.Models.Rversion

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Rversion</h4>
        <hr />
        <h2>@ViewBag.ProjectName</h2>
        <h3>Numero de RFQ @ViewBag.RfqId</h3>



        @Html.HiddenFor(model => model.Date)
        @Html.HiddenFor(model => model.RfqId)
        @Html.HiddenFor(model => model.TotalCost)
        @Html.HiddenFor(model => model.Status)
        @Html.HiddenFor(model => model.NumberVersion)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



        <div class="form-group">
            @Html.LabelFor(model => model.TypeWork, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.TypeWork, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TypeWork, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ScopeWork, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ScopeWork, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ScopeWork, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProjectDescription, htmlAttributes: new { @class = "control-label col-md-2", @row = "10" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ProjectDescription, new { htmlAttributes = new { @class = "form-control", @row = "10" } })
                @Html.ValidationMessageFor(model => model.ProjectDescription, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.NotesAndInstructions, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.NotesAndInstructions, new { htmlAttributes = new { @class = "form-control", @row = "10", @cols = "10" } })
                @Html.ValidationMessageFor(model => model.NotesAndInstructions, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Step 3" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
