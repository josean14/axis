@model AXIS.Models.Ccall

@{
    ViewBag.Title = "Call Log List";
}

<h2>Call Log</h2>

<div class="form-group">
    @Html.LabelFor(model => model.ClientId, "Select a Client", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("ClientId", null, htmlAttributes: new { @class = "form-control", @id = "SelectClient" })
        @Html.ValidationMessageFor(model => model.ClientId, "", new { @class = "text-danger" })
    </div>
</div>

<div id="PartialCallList"></div>

<a href=@Url.Action("Index","BusDev") class="btn btn-primary btn-xs">Back</a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>

    $("#SelectClient").change(function () {       // Funcion que se ejecuta cuando cambia la lista

        var id = $(this).val();
        var url = "/Ccalls/PartialCallList/" + id;
        $('#PartialCallList').load(url);


    });
    </script>

}